@inject ILanguageContainerService languageContainer


<section class="section bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="text-center mb-4">
                    <h3>@languageContainer.Keys["FeaturesTitle"]</h3>
                </div>
            </div>
            <!--end col-->
            <div class="col-lg-10">
                <div class="timeline-page position-relative py-4">
                    <div class="timeline-item mb-lg-5 pb-5">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="text-center mb-5 mb-lg-0">
                                    <img src="images/work-1.png" alt="Work" class="img-fluid">
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-lg-6">
                                <div class="works-description-right text-start bg-light mx-lg-3 mx-4">
                                    <h5 class="fs-18">@languageContainer.Keys["Explanation1Title"]</h5>
                                    <p class="text-muted mb-0">
                                        @languageContainer.Keys["Explanation1Text"]
                                    </p>
                                </div>
                            </div>
                            <!--end col-->
                        </div>
                        <!--end row-->
                    </div>
                    <!--end timeline-item-->

                    <div class="timeline-item mb-5 pb-5">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="works-description-left text-start bg-light mx-lg-3 mx-4 text-lg-end">
                                    <h5 class="fs-18">@languageContainer.Keys["Explanation2Title"]</h5>
                                    <p class="text-muted mb-0">
                                        @languageContainer.Keys["Explanation2Text"]
                                    </p>
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-lg-6 order-first order-lg-last">
                                <div class="text-center mb-5 mb-lg-0">
                                    <img src="images/work-2.png" alt="Work" class="img-fluid">
                                </div>
                            </div>
                            <!--end col-->
                        </div>
                        <!--end row-->
                    </div>
                    <!--end timeline-item-->
                    <div class="timeline-item">
                        <div class="row align-items-start">
                            <div class="col-lg-6">
                                <div class="text-center mb-5 mb-lg-0">
                                    <img src="images/work-3.png" alt="Work" class="img-fluid">
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-lg-6">
                                <div class="works-description-right text-start bg-light mx-lg-3 mx-4">
                                    <h5 class="fs-18">@languageContainer.Keys["Explanation3Title"]</h5>
                                    <p class="text-muted mb-0">
                                        @languageContainer.Keys["Explanation3Text"]
                                    </p>
                                </div>
                            </div>
                            <!--end col-->
                        </div>
                        <!--end row-->
                    </div>
                    <!--end timeline-item-->
                </div><!-- timeline-page -->
            </div>
            <!--end col-->
        </div>
        <!--end row-->
    </div>
    <!--end container-->
</section>

@code {
    [Parameter]
    public string CultureCode { get; set; }

    protected override async Task OnInitializedAsync()
    {
        languageContainer.SetLanguage(System.Globalization.CultureInfo.GetCultureInfo(CultureCode));


    }
}
